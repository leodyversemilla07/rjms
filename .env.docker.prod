# Docker Environment Configuration for RJMS Production
# Copy this file to .env for production deployment

# ==========================================
# Application Settings
# ==========================================
APP_NAME="Research Journal Management System"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_TIMEZONE=UTC
APP_KEY=CHANGE_THIS_TO_A_RANDOM_32_CHARACTER_STRING

# ==========================================
# Database Configuration
# ==========================================
DB_HOST=mysql
DB_PORT=3306
DB_NAME=rjdb
DB_USER=rjms
DB_PASSWORD=CHANGE_THIS_TO_A_SECURE_PASSWORD

# Root password for MySQL
DB_ROOT_PASSWORD=CHANGE_THIS_TO_A_SECURE_ROOT_PASSWORD

# ==========================================
# Session Configuration
# ==========================================
SESSION_LIFETIME=120
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=Strict

# ==========================================
# CSRF Protection
# ==========================================
CSRF_TOKEN_NAME=csrf_token

# ==========================================
# File Upload Configuration
# ==========================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx
UPLOAD_PATH=uploads/submissions

# ==========================================
# Logging Configuration
# ==========================================
LOG_LEVEL=warning
LOG_FILE=logs/app.log

# ==========================================
# Email Configuration
# ==========================================
MAIL_DRIVER=smtp
MAIL_HOST=your-smtp-server.com
MAIL_PORT=587
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"
