version: '3.8'

services:
  # Example: Change PHP settings
  php:
    environment:
      # Enable specific Xdebug features
      XDEBUG_MODE: debug,develop,coverage
      # Override PHP memory limit
      PHP_MEMORY_LIMIT: 512M
    # Example: Add custom volume mounts
    # volumes:
    #   - ./custom-config.ini:/usr/local/etc/php/conf.d/custom.ini

  # Example: Expose MySQL port to host (useful for external tools)
