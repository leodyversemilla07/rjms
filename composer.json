{
    "name": "leodyver/rjms",
    "description": "Research Journal Management System - A comprehensive platform for managing academic research journals",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Leodyver Semilla",
            "email": "leodyversemilla07@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "twbs/bootstrap": "^5.3",
        "fortawesome/font-awesome": "^7.0",
        "vlucas/phpdotenv": "^5.6",
        "monolog/monolog": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "phpstan/phpstan": "^1.10"
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src tests",
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
